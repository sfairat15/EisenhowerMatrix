@model CreateTaskModel

@{
    ViewData["Title"] = "Create todo task old school page";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-lg-6">
        <div class="panel">
            <div class="panel-body">
                <form asp-action="Create" method="post">
                    <div class="form-group">
                        <label for="Name">TODO:</label>
                        <input name="Name" type="text" placeholder="Learn C#" class="form-control" />
                        <span asp-validation-for="Name" class="danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="Urgency">Urgency (from 0 to 10):</label>
                        <input name="Urgency" type="number" placeholder="" class="form-control" />
                        <span asp-validation-for="Urgency" class="danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="Importance">Importance (from 0 to 10):</label>
                        <input name="Importance" type="number" placeholder="" class="form-control" />
                        <span asp-validation-for="Importance" class="danger"></span>
                    </div>
                    <input type="submit" value="Create" class="btn btn-success" />
                </form>
            </div>
        </div>
    </div>
</div>
